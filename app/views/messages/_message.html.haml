.message{data: {"id": "#{message.id}","group-id": "#{message.group_id}"}}
  .message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    %p.message__upper-info__date
      = message.created_at.in_time_zone('Tokyo').strftime("%Y/%m/%d(%a) %H:%M")
  - if message.content.present?
    %p.message__text
      = message.content
  = image_tag message.image_url if message.image.present?